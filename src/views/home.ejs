<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Food Review - Discover Great Food</title>
    <link href="/css/output.css" rel="stylesheet" />
  </head>
  <body class="bg-gray-50">
    <%- include('./components/navbar') %>

    <!-- Hero Section -->
    <div class="relative bg-indigo-800">
      <div class="absolute inset-0">
        <img
          class="w-full h-full object-cover"
          src="https://images.unsplash.com/photo-1498837167922-ddd27525d352"
          alt="Food background"
        />
        <div class="absolute inset-0 bg-indigo-800 mix-blend-multiply"></div>
      </div>
      <div
        class="relative max-w-7xl mx-auto py-24 px-4 sm:py-32 sm:px-6 lg:px-8"
      >
        <h1
          class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl lg:text-6xl"
        >
          Discover Amazing Food
        </h1>
        <p class="mt-6 text-xl text-indigo-100 max-w-3xl">
          Find the best restaurants, read reviews, and share your dining
          experiences with our community.
        </p>
        <div class="mt-10">
          <a
            href="/api/restaurants"
            class="inline-block bg-white py-3 px-8 rounded-md text-base font-medium text-indigo-600 hover:bg-indigo-50"
            >Browse Restaurants</a
          >
        </div>
      </div>
    </div>

    <!-- Featured Restaurants -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-8">
        Featured Restaurants
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% restaurants.forEach(restaurant => { %> <%-
        include('./components/restaurant-card', { restaurant }) %> <% }); %>
      </div>
    </div>

    <!-- Categories -->
    <div class="bg-gray-100">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">
          Popular Categories
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <% categories.forEach(category => { %>
          <a
            href="/api/restaurants?categoryIds=<%= category._id %>"
            class="bg-white rounded-lg p-6 text-center hover:shadow-md transition-shadow"
          >
            <h3 class="text-lg font-medium text-gray-900">
              <%= category.name %>
            </h3>
            <p class="mt-2 text-sm text-gray-600">
              <%= category.description %>
            </p>
          </a>
          <% }); %>
        </div>
      </div>
    </div>

    <!-- Recent Reviews -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-8">Recent Reviews</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <% reviews.forEach(review => { %>
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex items-center mb-4">
            <img
              src="<%= review.userId.avatar || 'https://ui-avatars.com/api/?name=' + review.userId.username %>"
              alt="<%= review.userId.username %>"
              class="w-10 h-10 rounded-full"
            />
            <div class="ml-4">
              <h4 class="text-lg font-medium text-gray-900">
                <%= review.userId.username %>
              </h4>
              <div class="flex items-center">
                <% for(let i = 0; i < 5; i++) { %>
                <span class="text-yellow-400"
                  ><%= i < review.rating ? '★' : '☆' %></span
                >
                <% } %>
              </div>
            </div>
          </div>
          <p class="text-gray-600"><%= review.content %></p>
          <% if (review.images && review.images.length > 0) { %>
          <div class="mt-4">
            <img
              src="<%= review.images[0] %>"
              alt="Review image"
              class="rounded-md w-full h-48 object-cover"
            />
          </div>
          <% } %>
        </div>
        <% }); %>
      </div>
    </div>

    <%- include('./components/footer') %>
  </body>
</html>
