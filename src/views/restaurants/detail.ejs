<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= restaurant.name %> - Food Review</title>
    <link href="/css/output.css" rel="stylesheet" />
  </head>
  <body class="bg-gray-100">
    <div class="min-h-screen p-6">
      <div class="max-w-7xl mx-auto">
        <!-- Restaurant Header -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
          <% if (restaurant.images && restaurant.images.length > 0) { %>
          <div class="relative h-96">
            <img
              src="<%= restaurant.images[0] %>"
              alt="<%= restaurant.name %>"
              class="w-full h-full object-cover"
            />
          </div>
          <% } %>

          <div class="p-8">
            <div class="flex justify-between items-start">
              <div>
                <h1 class="text-3xl font-bold text-gray-900 mb-2">
                  <%= restaurant.name %>
                </h1>
                <p class="text-gray-600 mb-4"><%= restaurant.address %></p>
                <p class="text-gray-600 mb-4">Phone: <%= restaurant.phone %></p>
              </div>

              <div class="flex items-center space-x-4">
                <div class="text-center">
                  <div class="text-3xl font-bold text-yellow-400">★</div>
                  <div class="text-xl font-semibold">
                    <%= restaurant.averageRating.toFixed(1) %>
                  </div>
                </div>

                <% if (user && (user._id.toString() ===
                restaurant.ownerId._id.toString() || user.role === 'admin')) {
                %>
                <div class="flex space-x-2">
                  <a
                    href="/api/restaurants/<%= restaurant._id %>/edit"
                    class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700"
                  >
                    Edit
                  </a>
                  <button
                    onclick="deleteRestaurant('<%= restaurant._id %>')"
                    class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700"
                  >
                    Delete
                  </button>
                </div>
                <% } %>
              </div>
            </div>

            <div class="mt-6">
              <h2 class="text-xl font-semibold text-gray-900 mb-2">
                Description
              </h2>
              <p class="text-gray-700"><%= restaurant.description %></p>
            </div>

            <div class="mt-6">
              <h2 class="text-xl font-semibold text-gray-900 mb-2">
                Categories
              </h2>
              <div class="flex flex-wrap gap-2">
                <% restaurant.categoryIds.forEach(category => { %>
                <span
                  class="px-3 py-1 bg-gray-100 rounded-full text-sm text-gray-800"
                >
                  <%= category.name %>
                </span>
                <% }); %>
              </div>
            </div>
          </div>
        </div>

        <!-- Dishes Section -->
        <div class="bg-white rounded-lg shadow-md p-8 mb-8">
          <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-900">Menu</h2>
            <% if (user && (user._id.toString() ===
            restaurant.ownerId._id.toString() || user.role === 'admin')) { %>
            <a
              href="/api/dishes/create?restaurantId=<%= restaurant._id %>"
              class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700"
            >
              Add Dish
            </a>
            <% } %>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% dishes.forEach(dish => { %>
            <div class="bg-gray-50 rounded-lg overflow-hidden">
              <% if (dish.images && dish.images.length > 0) { %>
              <img
                src="<%= dish.images[0] %>"
                alt="<%= dish.name %>"
                class="w-full h-48 object-cover"
              />
              <% } %>
              <div class="p-4">
                <h3 class="text-lg font-semibold text-gray-900 mb-2">
                  <%= dish.name %>
                </h3>
                <p class="text-gray-600 mb-2"><%= dish.description %></p>
                <div class="flex justify-between items-center">
                  <span class="text-lg font-bold text-gray-900"
                    >$<%= dish.price %></span
                  >
                  <div class="flex items-center">
                    <span class="text-yellow-400">★</span>
                    <span class="ml-1"
                      ><%= dish.averageRating.toFixed(1) %></span
                    >
                  </div>
                </div>
              </div>
            </div>
            <% }); %>
          </div>
        </div>

        <!-- Reviews Section -->
        <div class="bg-white rounded-lg shadow-md p-8">
          <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-900">Reviews</h2>
            <% if (user) { %>
            <button
              onclick="showReviewForm()"
              class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700"
            >
              Write Review
            </button>
            <% } %>
          </div>

          <div class="space-y-6">
            <% reviews.forEach(review => { %>
            <div class="border-b border-gray-200 pb-6">
              <div class="flex items-start justify-between">
                <div class="flex items-center">
                  <% if (review.userId.avatar) { %>
                  <img
                    src="<%= review.userId.avatar %>"
                    alt="<%= review.userId.username %>"
                    class="w-10 h-10 rounded-full"
                  />
                  <% } %>
                  <div class="ml-4">
                    <h3 class="text-lg font-semibold text-gray-900">
                      <%= review.userId.username %>
                    </h3>
                    <div class="flex items-center">
                      <% for (let i = 0; i < 5; i++) { %>
                      <span class="text-yellow-400">
                        <%= i < review.rating ? '★' : '☆' %>
                      </span>
                      <% } %>
                      <span class="ml-2 text-sm text-gray-600">
                        <%= new Date(review.createdAt).toLocaleDateString() %>
                      </span>
                    </div>
                  </div>
                </div>
              </div>
              <p class="mt-4 text-gray-700"><%= review.content %></p>
              <% if (review.images && review.images.length > 0) { %>
              <div class="mt-4 flex space-x-2">
                <% review.images.forEach(image => { %>
                <img
                  src="<%= image %>"
                  alt="Review image"
                  class="w-24 h-24 object-cover rounded"
                />
                <% }); %>
              </div>
              <% } %>
            </div>
            <% }); %>
          </div>
        </div>
      </div>
    </div>

    <script>
      async function deleteRestaurant(id) {
        if (!confirm("Are you sure you want to delete this restaurant?"))
          return;

        try {
          const response = await fetch(`/api/restaurants/${id}`, {
            method: "DELETE",
            headers: {
              "Content-Type": "application/json",
            },
          });

          if (response.ok) {
            window.location.href = "/api/restaurants";
          } else {
            alert("Failed to delete restaurant");
          }
        } catch (error) {
          console.error("Error:", error);
          alert("An error occurred");
        }
      }
    </script>
  </body>
</html>
