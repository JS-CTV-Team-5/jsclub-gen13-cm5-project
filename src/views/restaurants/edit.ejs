<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Restaurant - Food Review</title>
    <link href="/css/output.css" rel="stylesheet" />
  </head>
  <body class="bg-gray-100">
    <div class="min-h-screen p-6">
      <div class="max-w-3xl mx-auto">
        <div class="bg-white rounded-lg shadow-md p-8">
          <h1 class="text-2xl font-bold text-gray-900 mb-8">Edit Restaurant</h1>

          <form id="editForm" class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700"
                >Restaurant Name</label
              >
              <input
                type="text"
                id="name"
                name="name"
                value="<%= restaurant.name %>"
                required
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
              />
            </div>

            <div>
              <label
                for="address"
                class="block text-sm font-medium text-gray-700"
                >Address</label
              >
              <input
                type="text"
                id="address"
                name="address"
                value="<%= restaurant.address %>"
                required
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
              />
            </div>

            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700"
                >Phone</label
              >
              <input
                type="tel"
                id="phone"
                name="phone"
                value="<%= restaurant.phone %>"
                required
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
              />
            </div>

            <div>
              <label
                for="description"
                class="block text-sm font-medium text-gray-700"
                >Description</label
              >
              <textarea
                id="description"
                name="description"
                rows="4"
                required
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
              >
<%= restaurant.description %></textarea
              >
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700"
                >Categories</label
              >
              <div class="mt-2 space-y-2">
                <% categories.forEach(category => { %>
                <label class="inline-flex items-center mr-4">
                  <input type="checkbox" name="categoryIds" value="<%=
                  category._id %>" <%=
                  restaurant.categoryIds.includes(category._id) ? 'checked' : ''
                  %> class="rounded border-gray-300 text-indigo-600
                  focus:ring-indigo-500">
                  <span class="ml-2"><%= category.name %></span>
                </label>
                <% }); %>
              </div>
            </div>

            <div>
              <label
                for="images"
                class="block text-sm font-medium text-gray-700"
                >Add New Images</label
              >
              <input
                type="file"
                id="images"
                name="images"
                multiple
                accept="image/*"
                class="mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100"
              />
            </div>

            <% if (restaurant.images && restaurant.images.length > 0) { %>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2"
                >Current Images</label
              >
              <div class="grid grid-cols-4 gap-4">
                <% restaurant.images.forEach(image => { %>
                <div class="relative">
                  <img
                    src="<%= image %>"
                    alt="Restaurant image"
                    class="w-full h-24 object-cover rounded"
                  />
                </div>
                <% }); %>
              </div>
            </div>
            <% } %>

            <div class="grid grid-cols-2 gap-4">
              <div>
                <label for="lat" class="block text-sm font-medium text-gray-700"
                  >Latitude</label
                >
                <input
                  type="number"
                  id="lat"
                  name="lat"
                  step="any"
                  required
                  value="<%= restaurant.location.coordinates[1] %>"
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
                />
              </div>
              <div>
                <label for="lng" class="block text-sm font-medium text-gray-700"
                  >Longitude</label
                >
                <input
                  type="number"
                  id="lng"
                  name="lng"
                  step="any"
                  required
                  value="<%= restaurant.location.coordinates[0] %>"
                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
                />
              </div>
            </div>

            <div class="flex justify-end space-x-4">
              <a
                href="/api/restaurants/<%= restaurant._id %>"
                class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50"
              >
                Cancel
              </a>
              <button
                type="submit"
                class="px-4 py-2 bg-indigo-600 text-white rounde d-md hover:bg-indigo-700"
              >
                Update Restaurant
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script>
      document
        .getElementById("editForm")
        .addEventListener("submit", async (e) => {
          e.preventDefault();
          const formData = new FormData(e.target);

          try {
            const response = await fetch(
              "/api/restaurants/<%= restaurant._id %>",
              {
                method: "PUT",
                body: formData,
              }
            );

            if (response.ok) {
              window.location.href = "/api/restaurants/<%= restaurant._id %>";
            } else {
              alert("Failed to update restaurant");
            }
          } catch (error) {
            console.error("Error:", error);
            alert("An error occurred");
          }
        });
    </script>
  </body>
</html>
